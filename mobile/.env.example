# Mobile App Specific Environment Variables

# API Configuration
EXPO_PUBLIC_API_URL=http://localhost:5000/api/v1
EXPO_PUBLIC_WS_URL=ws://localhost:5000

# Application Settings
EXPO_PUBLIC_APP_NAME=Axis Imaging
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_COMPANY_NAME=Axis Imaging
EXPO_PUBLIC_CLINIC_ADDRESS=Mickleham, Victoria, Australia

# Feature Flags
EXPO_PUBLIC_ENABLE_SMS_AUTH=true
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_APPOINTMENT_BOOKING=true
EXPO_PUBLIC_ENABLE_REPORT_DOWNLOAD=true
EXPO_PUBLIC_ENABLE_IMAGE_VIEWER=true

# Push Notifications
EXPO_PUBLIC_PUSH_NOTIFICATION_PROJECT_ID=your_expo_project_id

# Google Maps
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY_IOS=your_ios_google_maps_key
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY_ANDROID=your_android_google_maps_key

# Sentry
EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Support
EXPO_PUBLIC_SUPPORT_EMAIL=support@axisimaging.com.au
EXPO_PUBLIC_SUPPORT_PHONE=+61390001234

# Development
EXPO_PUBLIC_MOCK_API=false
EXPO_PUBLIC_DEBUG=false