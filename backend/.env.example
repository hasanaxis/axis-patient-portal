# Backend Specific Environment Variables

# Server Configuration
PORT=5000
HOST=0.0.0.0

# Database - Supabase Configuration
DATABASE_URL="postgresql://postgres.[PROJECT_REF]:[YOUR_PASSWORD]@aws-0-ap-southeast-2.pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres.[PROJECT_REF]:[YOUR_PASSWORD]@aws-0-ap-southeast-2.pooler.supabase.com:5432/postgres"

# Supabase API Configuration
SUPABASE_URL="https://[PROJECT_REF].supabase.co"
SUPABASE_ANON_KEY="your_anon_key_here"
SUPABASE_SERVICE_ROLE_KEY="your_service_role_key_here_click_reveal_in_supabase"

# Redis
REDIS_URL=redis://:your_redis_password@localhost:6379

# JWT Tokens
JWT_SECRET=your_jwt_secret_key_min_32_characters_long
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_min_32_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# ClickSend SMS (Australian SMS Provider)
CLICKSEND_USERNAME=your_clicksend_username
CLICKSEND_API_KEY=your_clicksend_api_key
CLICKSEND_FROM_NUMBER=+61400000000
SMS_PROVIDER=clicksend

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_DIR=./uploads

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-southeast-2
AWS_S3_BUCKET=axis-imaging-portal

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_DIR=./logs

# External APIs
SECTRA_API_URL=https://sectra-api.example.com
SECTRA_API_KEY=your_sectra_api_key
VOYAGER_API_URL=https://voyager-api.example.com
VOYAGER_API_KEY=your_voyager_api_key

# ===== SMS NOTIFICATION SYSTEM =====
# Application URLs for SMS links
APP_BASE_URL=https://app.axisimaging.com.au
REGISTRATION_BASE_URL=https://register.axisimaging.com.au
WEB_APP_BASE_URL=https://portal.axisimaging.com.au

# Twilio SMS Configuration (enhanced)
TWILIO_FROM_NUMBER=+61412345678
TWILIO_WEBHOOK_URL=https://api.axisimaging.com.au/sms/webhook/twilio/status

# SMS Monitoring & Alerts
SMS_ALERT_EMAIL_1=admin@axisimaging.com.au
SMS_ALERT_EMAIL_2=it@axisimaging.com.au
EMERGENCY_ESCALATION_PHONE_1=+61412345679
EMERGENCY_ESCALATION_PHONE_2=+61412345680

# SMS Features
SMS_ENABLE_SCHEDULED_JOBS=true
SMS_ENABLE_DELIVERY_TRACKING=true
SMS_ENABLE_OPT_OUT_KEYWORDS=true
SMS_ENABLE_BUSINESS_HOURS_ONLY=true
SMS_ENABLE_EMERGENCY_OVERRIDE=true

# SMS Limits
SMS_DAILY_LIMIT_PER_PATIENT=3
SMS_BULK_SEND_LIMIT=100
SMS_MAX_RETRIES=3
SMS_RETRY_INTERVAL_HOURS=6

# Business Hours (Australian Eastern Time)
BUSINESS_HOURS_WEEKDAY_START=07:00
BUSINESS_HOURS_WEEKDAY_END=19:00
BUSINESS_HOURS_SATURDAY_START=08:00
BUSINESS_HOURS_SATURDAY_END=16:00
BUSINESS_HOURS_SUNDAY_ENABLED=false

# Compliance & Privacy
SMS_RETENTION_PERIOD_DAYS=2555
SMS_GDPR_COMPLIANT=true