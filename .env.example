# Application Environment
NODE_ENV=development

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=axis_admin
DB_PASSWORD=your_secure_password_here
DB_NAME=axis_portal
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# Backend Configuration
BACKEND_PORT=3001
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_min_32_chars
CORS_ORIGIN=http://localhost:3000

# Frontend Configuration
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:3001/api

# Twilio Configuration (for SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+61XXXXXXXXX
TWILIO_VERIFY_SERVICE_SID=your_twilio_verify_service_sid

# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-southeast-2
AWS_S3_BUCKET=axis-imaging-portal

# PACS/RIS Integration (Sectra)
SECTRA_API_URL=https://sectra-api.example.com
SECTRA_API_KEY=your_sectra_api_key
SECTRA_API_SECRET=your_sectra_api_secret

# Voyager RIS Integration
VOYAGER_API_URL=https://voyager-api.example.com
VOYAGER_API_KEY=your_voyager_api_key
VOYAGER_API_SECRET=your_voyager_api_secret

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@axisimaging.com.au
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=Axis Imaging <noreply@axisimaging.com.au>

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your_session_secret_key_here
ENCRYPTION_KEY=your_encryption_key_32_chars_here

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=info

# Mobile App
EXPO_PUBLIC_API_URL=http://localhost:3001/api

# Feature Flags
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_APPOINTMENT_BOOKING=true
ENABLE_REPORT_DOWNLOAD=true

# Australian Healthcare Specific
MEDICARE_API_URL=https://api.servicesaustralia.gov.au/medicare
MEDICARE_API_KEY=your_medicare_api_key
MY_HEALTH_RECORD_API_URL=https://api.myhealthrecord.gov.au
MY_HEALTH_RECORD_API_KEY=your_my_health_record_api_key